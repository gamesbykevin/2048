<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutGame"
    tools:context="com.gamesbykevin.a2048.GameActivity">

    <com.gamesbykevin.a2048.opengl.OpenGLSurfaceView
        android:id="@+id/openglView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/gameOverLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/GameOverPage">

        <include layout="@layout/layout_logo" />

        <TableLayout style="@style/TableMenu">
            <TableRow style="@style/RowMenu">
                <Button android:id="@+id/ButtonStart" style="@style/ButtonMenu" android:text="Start" android:onClick="onClickStart" />
            </TableRow>
            <TableRow style="@style/RowMenu">
                <Button android:id="@+id/ButtonOptions" style="@style/ButtonMenu" android:text="Options" android:onClick="onClickOptions" />
            </TableRow>
            <TableRow style="@style/RowMenu">
                <Button android:id="@+id/ButtonRate" style="@style/ButtonMenu" android:text="Rate" android:onClick="onClickRate" />
            </TableRow>
            <TableRow style="@style/RowMenu">
                <Button android:id="@+id/ButtonMore" style="@style/ButtonMenu" android:text="More" android:onClick="onClickMore" />
            </TableRow>
            <TableRow style="@style/RowMenu">
                <Button android:id="@+id/ButtonExit" style="@style/ButtonMenu" android:text="Exit" android:onClick="onClickExit" />
            </TableRow>
        </TableLayout>

        <include layout="@layout/layout_social_icons" />

    </LinearLayout>
</FrameLayout>